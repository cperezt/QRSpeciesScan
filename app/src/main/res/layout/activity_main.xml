<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <FrameLayout
        android:id="@+id/fm_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="#ff6b00"
        android:visibility="visible" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_fragment"
            android:background="@drawable/botonppal"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="100dp"
             />


        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_result_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_result"
            android:text="Bienvenidos al sistema de etiquetado digital de especies vegetales de importancia desarrollado por SENNOVA Linea InnovaciÃ³n y Tecnoparque Nodo La Angostura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" />

    </LinearLayout>


    <ImageView
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:src="@drawable/sennovalogo">


    </ImageView>


</LinearLayout>